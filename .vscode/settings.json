{
  "editor.defaultFormatter": "biomejs.biome",
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome",
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma",
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "quickfix.biome": "explicit",
  },
  "search.exclude": {
    "**/node_modules": true
  },
  "cSpell.words": [
    "clsx",
    "instantsearch",
    "Linx",
    "lucide",
    "ufcrm"
  ],
}
